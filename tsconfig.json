{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "lib": [ "es2018" ],
        "module": "CommonJS",
        "target": "ES2018",
        "baseUrl": ".",
        "outDir": "./lib",
        "rootDir": "./src"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
